<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/transparent" android:id="@+id/layout">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="@string/Enter"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/button" android:layout_toLeftOf="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:id="@+id/button" android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number Here"
            android:inputType="phone"
            android:id="@+id/editText2" android:layout_alignParentRight="true" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/textView2"
            android:maxLines="4"
            android:layout_alignRight="@+id/button"
            android:layout_alignParentLeft="true" android:layout_below="@+id/editText2"
            android:layout_above="@+id/editText"/>
    <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"/>
</RelativeLayout>

